# ARM Options
CONFIG_ARM64_VA_BITS_40=y
CONFIG_ARM64_PA_BITS_40=y

# Cache Options
CONFIG_CACHE_MANAGEMENT=y
CONFIG_DCACHE_LINE_SIZE_DETECT=y
CONFIG_ICACHE_LINE_SIZE_DETECT=y

# Enable GPIO
CONFIG_GPIO=y

# Serial Drivers
CONFIG_SERIAL=y
CONFIG_UART_INTERRUPT_DRIVEN=y

# Enable Console
CONFIG_CONSOLE=y
CONFIG_CONSOLE_INPUT_MAX_LINE_LEN=256
CONFIG_CONSOLE_HANDLER=y
CONFIG_UART_CONSOLE=y

CONFIG_CLOCK_CONTROL=y

# Ensure the EINT interrupt driver is initialized early
CONFIG_INTC_INIT_PRIORITY=2
